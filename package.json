{
  "name": "@gavin/design-manager",
  "version": "1.0.0",
  "description": "Standalone design/theme management tool for React applications",
  "main": "index.js",
  "module": "index.js",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js"
    },
    "./styles": {
      "style": "./styles/design-manager.css",
      "default": "./styles/design-manager.css"
    },
    "./styles/design-manager.css": {
      "style": "./styles/design-manager.css",
      "default": "./styles/design-manager.css"
    }
  },
  "files": [
    "*.js",
    "*.jsx",
    "components",
    "context",
    "hooks",
    "lib",
    "tabs",
    "styles",
    "README.md"
  ],
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "lucide-react": ">=0.300.0"
  },
  "dependencies": {
    "react-rnd": "^10.4.0",
    "culori": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "vite": "^7.0.0"
  },
  "keywords": [
    "react",
    "theme",
    "design-system",
    "color",
    "typography",
    "tailwind",
    "shadcn",
    "design-tokens",
    "color-picker",
    "dark-mode"
  ],
  "author": "Gavin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/goov373/design-manager"
  },
  "bugs": {
    "url": "https://github.com/goov373/design-manager/issues"
  },
  "homepage": "https://github.com/goov373/design-manager#readme"
}
